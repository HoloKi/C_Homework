ESERCIZIO 1
#include <stdio.h>

int isprime(int n) {
    int prime = 1;
    if (n>1) {
        int d = 2;
        while (d<n && prime){
            if (n%d == 0)
                prime = 0;
            d++;
        }
    }
    else
        prime = 0;
    return prime;
}

/*
