ESERCIZIO 3
#include <stdio.h>

int divisori(int n){
    int i,s=0,g;
    for(i=1;i<n;)
        if(n%i==0) {
            s = s + i;
            i++;
        } else
            i++;
    return s;
}
int p,s,x,y;
int main() {
    scanf("%d",&p);
    scanf("%d",&s);
    if(p>1 && s>1){
        x = divisori(p);
        if(x=s){
            printf("SI");
        } else
            printf("NO");
    }
    return 0;
}

