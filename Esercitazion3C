        return p-1;
}*/

int goldbach(int n) {
    int p=2;
    int c;
    int d;
    do{
        if(isprime(p)==1)
            c = 2*n-p;
            p++;
    }while(!isprime(c));
        return p-1;
}

int main() {
    int n;
    int p;
    scanf("%d", &n);

    p = goldbach(n);

    printf("%d\n", p);

    return 0;
}
//-------------------------------------------------------------------------------------------------------------------------------
ESERCIZIO 2

#include <stdio.h>

int isprime(int n) {
    int prime = 1; //numero primo
    if (n>1) {
        int d = 2;
        while (d<n && prime){
            if (n%d == 0)
                prime = 0;
            d++;
        }
    }
    else
        prime = 0;
    return prime;
}


int nextprime(int n) {
   do{
       n++;
   }while(!isprime(n));
   return n;
}

int main() {
    int n;
    int a, d, k;
    scanf("%d", &n);
    a=1; //contatore numero divisione
    do{
        k=0;
        a= nextprime(a); //inizia con a = 2
        do {
            d = n;
            if (n % a == 0) //se Ã¨ divisore
                n = n / a;
            k++;
        }while (n%a==0);
        if(d%a==0 && n!=1) { //se resto 0
            printf("%d^%d", a, k);
            printf("*");
        }
    }while(n!=1);
    printf("%d^%d", a, k);

    return 0;
}
